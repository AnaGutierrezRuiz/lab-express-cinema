<div class="detail-container">
  <img src="{{movie.image}}" width="520" height="520">
  <div class="card">
    <div class="detail-card card-body">
      <h4 class="card-title">{{movie.title}}</h4>
      <h5 class="card-title">Director: {{movie.director}}</h5>
      <ul class="list-group list-group-flush">
        <h5 class="mt-1">Stars</h5>
        {{#each movie.stars as |star|}}
          <li class="list-group-item ms-4 " >{{star}}</li>
        {{/each}}
      </ul>
      <h5 class="mt-1">Description</h5>
      <li>{{movie.description}}</li>
      <div class="showtimes mt-3">
        {{#each movie.showtimes as |showtime|}}
          <h5>{{showtime}}  |</h5>
        {{/each}}
    </div>
  </div>
</div>
</div>
<a class="btn btn-danger mt-2" href="/movies">Go back</a>
